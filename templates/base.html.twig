<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Un Nouveau Monde{% endblock %}</title>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link rel="stylesheet" href="https://bootswatch.com/5/quartz/bootstrap.min.css">
            <link rel="stylesheet" href="https://bootswatch.com/5/quartz/_variables.scss">

            <script src="https://kit.fontawesome.com/9a2ea947a1.js" crossorigin="anonymous"></script>

        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block header %}
            {% include "_header.html.twig" %}
        {% endblock %}
        {% block body %}
            {% if app.user and app.user.isVerified == false %}
                <div class="alert alert-warning alert-dismissible" role="alert">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    <div class="alert-message">
                        <strong>Votre compte n'est pas activ√©</strong>, <a href="{{ path('resend_verif') }}">renvoyer le lien d'activation</a>
                    </div>
                </div>
            {% endif %}


        {% endblock %}
        {% block footer %}
            {% include "footer.html.twig" %}
        {% endblock %}
    </body>
</html>
